---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";

import { Icon } from "astro-icon/components";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Contact" description="Contact me" />
  </head>
  <body
    class="dark:bg-stone-950 dark:text-white md:max-w-screen-md md:mx-auto mx-4"
  >
    <Navbar />
    <main class="flex flex-col gap-2">
      <div>
        <h1 class="text-2xl">Contact</h1>
        <p>I'm always happy to hear from you!</p>
      </div>
      <div class="flex flex-row gap-1">
        <p>
          <a
            class="underline p-1 rounded-md hover:bg-stone-300 dark:hover:bg-stone-800 duration-100 flex flex-row gap-1 items-center justify-center"
            href="mailto:marcus@marcusleonasharvey.com"
            ><Icon name="mdi:email" class={"w-4 h-4"} /> marcus@marcusleonasharvey.com
          </a>
        </p>
        <p>
          <a
            class="underline p-1 rounded-md hover:bg-stone-300 dark:hover:bg-stone-800 duration-100 flex flex-row gap-1 items-center justify-center"
            href="/pgp.txt"
            ><Icon name="mdi:lock" class={"w-4 h-4"} /> PGP Key
          </a>
        </p>
      </div>
      <div class="bg-white rounded-md">
        <iframe
          data-tally-src="https://tally.so/embed/n9d5ME?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
          loading="lazy"
          width="100%"
          height="177s"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
          title="Contact Me"></iframe><script>
          var d = document,
            w = "https://tally.so/widgets/embed.js",
            v = function () {
              "undefined" != typeof Tally
                ? Tally.loadEmbeds()
                : d
                    .querySelectorAll("iframe[data-tally-src]:not([src])")
                    .forEach(function (e) {
                      e.src = e.dataset.tallySrc;
                    });
            };
          if ("undefined" != typeof Tally) v();
          else if (d.querySelector('script[src="' + w + '"]') == null) {
            var s = d.createElement("script");
            (s.src = w), (s.onload = v), (s.onerror = v), d.body.appendChild(s);
          }
        </script>
      </div>
    </main>
  </body>
</html>
