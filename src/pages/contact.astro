---
import BaseHead from "../components/BaseHead.astro";
import IconLink from "../components/IconLink.astro";
import Navbar from "../components/Navbar.astro";

import { Icon } from "astro-icon/components";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Contact" description="Contact me" />
  </head>
  <body
    class="dark:bg-stone-950 dark:text-white md:max-w-screen-md md:mx-auto mx-4"
  >
    <Navbar />
    <main class="flex flex-col gap-2">
      <div>
        <h1 class="text-2xl">Contact</h1>
        <p>I'm always happy to hear from you!</p>
      </div>
      <div class="md:flex md:flex-row grid grid-cols-2 mt-2 -ml-2">
        <IconLink href="https://stageready.co.uk"
          ><Icon name="mdi:web" />Stage Ready</IconLink
        >
        <IconLink href="https://flvffy.xyz"
          ><Icon name="mdi:web" />Developer Website</IconLink
        >
        <IconLink href="mailto:marcus@marcusleonasharvey.com"
          ><Icon name="mdi:email" />Personal Email</IconLink
        >
        <IconLink href="mailto:marcus@stageready.co.uk"
          ><Icon name="mdi:email" />Work Email</IconLink
        >
        <IconLink href="https://twitter.com/flvffywvffy"
          ><Icon name="mdi:twitter" />Twitter</IconLink
        >
        <IconLink href="https://instagram.com/marcusleonas_public"
          ><Icon name="mdi:instagram" />Instagram</IconLink
        >
      </div>
    </main>
  </body>
</html>
